{
  "tests": [
    {
      "name": "Handle OPTIONS request for CORS",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200,
      "expectedBody": "",
      "bodyMatcher": "exact"
    },
    {
      "name": "Reject GET requests",
      "method": "GET",
      "path": "/",
      "expectedStatus": 405,
      "expectedBody": {
        "error": "Method not allowed"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Reject empty request body",
      "method": "POST",
      "path": "/",
      "body": {},
      "expectedStatus": 400,
      "expectedBody": {
        "error": "Name and phone are required"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Accept valid application data",
      "method": "POST",
      "path": "/",
      "body": {
        "name": "Тестовый клиент",
        "phone": "+7 999 123-45-67"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true
      },
      "bodyMatcher": "partial"
    }
  ]
}
